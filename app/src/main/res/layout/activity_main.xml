<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="approximatelyhungry.com.issuequizzertesting.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Trending Quizzes"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="40sp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:text="Gun Violence"
        android:onClick="gunViolence"
        android:drawableLeft="@drawable/ic_pistol"
        android:paddingLeft="10dp"
        android:layout_marginTop="100dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:text="Drug Epidemic"
        android:drawableLeft="@drawable/ic_pill"
        android:paddingLeft="10dp"
        android:onClick="drugEpidemic"
        android:layout_marginTop="200dp"
        android:id="@+id/button" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="38dp"
        android:background="@android:color/holo_green_light"
        android:drawableLeft="@drawable/ic_cash_multiple"
        android:paddingLeft="10dp"
        android:onClick="payGap"
        android:text="Pay Gap" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:text="Immigration/Refugees"
        android:drawableLeft="@drawable/ic_human_male_female"
        android:paddingLeft="10dp"
        android:onClick="immigration"
        android:layout_marginTop="400dp" />

    <Button
        android:id="@+id/warButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:text="War in Middle East"
        android:drawableLeft="@drawable/ic_sword_cross"
        android:paddingLeft="10dp"
        android:onClick="war"
        android:layout_marginTop="500dp" />

    <Button
        android:id="@+id/involvedButton"
        android:layout_width="193dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/warButton"
        android:layout_marginBottom="32dp"
        android:background="@android:color/holo_red_dark"
        android:drawableLeft="@drawable/ic_sign_text"
        android:onClick="involved"
        android:paddingLeft="10dp"
        android:text="Get Involved!" />

    <Button
        android:id="@+id/achievementsButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/involvedButton"
        android:layout_marginEnd="62dp"
        android:background="#f9f625"
        android:drawableLeft="@drawable/ic_trophy_variant_outline"
        android:gravity="center"
        android:onClick="achievements"
        android:paddingLeft="6dp" />

</RelativeLayout>